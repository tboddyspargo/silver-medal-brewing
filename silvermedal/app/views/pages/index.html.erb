
<div class="zone vh-100" style="background: black url(<%= image_url('beer.jpg') %>) center center/cover no-repeat fixed">
    <div class="container pt-4 bg-front">
        <h1 class="text-dark-primary font-4x">It's alright.</h1>
        <p class="text-light font-2x">Details</p>
    </div>
</div>
<div class="zone vh-100 top-under-shadow">
    <div class="container pt-4">
        <h2 class="text-dark-accent font-4x">Unique Flavors for Every Palette</h2>
        <div id="carouselExampleIndicators" class="carousel slide w-50" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= image_tag 'best-beer.jpg', class: 'd-block w-50 mx-auto' %>
              <div class="carousel-caption d-none d-md-block">
                <h5>Beer Name</h5>
                <p>Brief description.</p>
              </div>
            </div>
            <div class="carousel-item">
              <%= image_tag 'best-beer.jpg', class: 'd-block w-50 mx-auto' %>
              <div class="carousel-caption d-none d-md-block">
                <h5>Beer Name</h5>
                <p>Brief description.</p>
              </div>
            </div>
            <div class="carousel-item">
              <%= image_tag 'best-beer.jpg', class: 'd-block w-50 mx-auto' %>
              <div class="carousel-caption d-none d-md-block">
                <h5>Beer Name</h5>
                <p>Brief description.</p>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

    </div>
</div>
<div class="zone vh-100 top-over-shadow" style="background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), white url(<%= image_url('friendship-map.png') %>) center center/cover no-repeat scroll">
    <div class="container p-4 bg-front">
        <h2 class="font-4x">Handcrafted in Friendship, Wisconsin</h2>
        <p class="">Details</p>
    </div>
</div>
<div class="zone vh-50 top-under-shadow">
    <div class="container pt-4">
        <h2 class="font-4x">Follow us!</h2>
        <div class="btn-group" role="group">
            <%= link_to 'https://www.facebook.com/silvermedal.brewing.9', class: 'btn btn-outline-primary' do %>
                Facebook
            <% end %>
            <%= link_to 'https://twitter.com/silvermedalbrew', class: 'btn btn-outline-primary' do %>
                Twitter
            <% end %>
            <%= link_to 'https://www.instagram.com/silvermedalbrewing', class: 'btn btn-outline-primary' do %>
                Instagram
            <% end %>
        </div>
    </div>
</div>
